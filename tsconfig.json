{
  "compilerOptions": {
    // ğŸ¯ ConfiguraciÃ³n de target y librerÃ­as
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],

    // ğŸ”’ ConfiguraciÃ³n estricta empresarial
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // ğŸš« Verificaciones adicionales
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,

    // ğŸ“¦ ConfiguraciÃ³n de mÃ³dulos
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    // âš¡ Performance y compilaciÃ³n
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsconfig.tsbuildinfo",
    "skipLibCheck": true,

    // ğŸ”„ ResoluciÃ³n y paths
    "resolveJsonModule": true,
    "isolatedModules": true,

    // âš›ï¸ JSX Configuration
    "jsx": "preserve",
    "jsxImportSource": "react",

    // ğŸ¨ Next.js Plugin
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ğŸ“‚ Base URL y Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/services/*": ["./src/services/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/app/*": ["./src/app/*"]
    },

    // ğŸ¯ Configuraciones adicionales para mejor DX
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },

  // ğŸ“ Files to include
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  // ğŸš« Files to exclude
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "ejemplo proyecto funcional",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "coverage"
  ],

  // ğŸ›ï¸ Watch options for development
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/.next"
    ]
  }
}
